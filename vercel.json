{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60
    }
  },
  "env": {
    "CHROME_EXECUTABLE_PATH": "/usr/bin/google-chrome-stable"
  },
  "build": {
    "env": {
      "CHROME_EXECUTABLE_PATH": "/usr/bin/google-chrome-stable"
    }
  },
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/index.js"
    }
  ]
} 